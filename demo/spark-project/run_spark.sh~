# Run voice
else
	ssh -n -f training@127.0.0.1 "spark-submit --master local[4] --class scala.streaming.StreamingWordConsumer /home/training/Desktop/spark-project/target/scala-2.10/spark-examples-1.5.1-hadoop2.2.0.jar localhost 2000 localhost ${2} > /home/training/out.txt 2>&1 &"
